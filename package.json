{
  "name": "midd-frontend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "clean": "rimraf ./dist",
    "serve": "browser-sync start --server 'dist' --files 'dist' --directory --no-notify --no-ghost-mode",
    "html": "node scripts/process-html.js",
    "styles": "sass --quiet src/scss:dist/css --style=compressed && postcss dist/css/*.css --replace",
    "scripts": "webpack --config webpack.config.js",
    "images": "imagemin 'src/images/**/*' --out-dir=dist/images",
    "svg-sprite": "node scripts/generate-svg-sprite.js",
    "copy:deps": "cpy --flat 'node_modules/chart.js/dist/chart.umd.js' dist/js",
    "copy:meta": "cpy composer.json dist",
    "lint:styles": "stylelint 'src/scss/**/*.scss'",
    "watch:html": "onchange 'src/templates/**/*.twig' 'src/data/*.yml' -- npm run html",
    "watch:styles": "onchange 'src/scss/**/*.scss' -- npm run styles",
    "watch:scripts": "npm run scripts -- --watch",
    "watch:images": "onchange 'src/images/**/*' -- npm run images",
    "build": "npm-run-all clean copy:* html styles scripts images svg-sprite",
    "dev": "npm-run-all build --parallel watch:* serve",
    "deploy": "npm run build && node scripts/deploy.js"
  },
  "devDependencies": {
    "@types/anchor-js": "^5.0.3",
    "@types/animejs": "^3.1.12",
    "@types/chart.js": "^2.9.41",
    "@types/clamp-js-main": "^0.11.5",
    "@types/glob": "^8.1.0",
    "@types/headroom.js": "^0.12.4",
    "@types/lodash": "^4.17.14",
    "@types/lozad": "^1.16.4",
    "@types/micromodal": "^0.3.5",
    "@types/pikaday": "^1.7.9",
    "autoprefixer": "^10.4.0",
    "browser-sync": "^2.27.7",
    "cpy-cli": "^5.0.0",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^5.0.12",
    "dotenv": "^10.0.0",
    "glob": "^7.2.0",
    "imagemin-cli": "^7.0.0",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^9.0.2",
    "prettier": "^3.4.1",
    "prettier-plugin-twig-melody": "^0.4.6",
    "rimraf": "^3.0.2",
    "sass": "^1.82.0",
    "sort-css-media-queries": "^2.0.4",
    "stylelint": "^15.11.0",
    "stylelint-config-xo-scss": "~0.15.0",
    "stylelint-prettier": "~4.1.0",
    "svg-sprite": "^1.5.0",
    "svgo": "^2.8.0",
    "ts-loader": "^9.5.1",
    "twig": "^1.15.4",
    "webpack": "^5.65.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^4.9.1",
    "yaml": "^1.10.2"
  },
  "dependencies": {
    "anchor-js": "^5.0.0",
    "animejs": "^3.2.1",
    "chart.js": "^4.4.7",
    "clamp-js-main": "^0.11.6",
    "focus-within-polyfill": "^5.2.1",
    "headroom.js": "^0.12.0",
    "iframe-resizer": "^4.4.5",
    "intersection-observer": "^0.12.0",
    "lodash": "^4.17.21",
    "lozad": "^1.16.0",
    "mdn-polyfills": "^5.20.0",
    "micromodal": "^0.4.10",
    "normalize.css": "^8.0.1",
    "object-fit-images": "^3.2.4",
    "panelsnap": "git+https://github.com/poojagunturu96/panelsnap",
    "pikaday": "^1.8.2",
    "preact": "^10.25.1",
    "promise-polyfill": "^8.3.0",
    "stickybits": "^3.7.9",
    "superclamp": "^0.2.3",
    "swiper": "11.1.14"
  },
  "bundlesize": [
    {
      "path": "./dist/css/*.css",
      "maxSize": "35 kB",
      "compression": "brotli"
    },
    {
      "path": "./dist/js/main.bundle.js",
      "maxSize": "60 kB",
      "compression": "brotli"
    },
    {
      "path": "./dist/js/journey.bundle.js",
      "maxSize": "22 kB",
      "compression": "brotli"
    }
  ]
}
