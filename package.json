{
  "name": "midd-frontend",
  "description": "Frontend assets for Drupal8 middlebury_theme",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "start": "npm run dev",
    "dev": "gulp dev",
    "dev:saw": "gulp devSaw",
    "build": "NODE_ENV=production gulp build",
    "build:scripts": "NODE_ENV=production gulp scripts",
    "build:styles": "NODE_ENV=production gulp styles",
    "build:icons": "NODE_ENV=production gulp icons",
    "deploy": "gulp deploy",
    "deploy:gh": "npm run build && gh-pages -d dist -b master-dist",
    "now-build": "npm run build && mv dist public",
    "test": "npm run test:bundlesize",
    "test:visual": "percy snapshot dist --snapshot-files \"*.html\"",
    "test:bundlesize": "bundlesize",
    "lint": "npm run lint:styles",
    "lint:styles": "stylelint src/scss/*",
    "format": "prettier --config ./.prettierrc --write \"src/**/*.{js,ts,scss}\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/middlebury/midd-frontend.git"
  },
  "bugs": {
    "url": "https://github.com/middlebury/midd-frontend/issues"
  },
  "devDependencies": {
    "@ronilaukkarinen/gulp-stylelint": "^14.1.2",
    "@types/anchor-js": "^5.0.0",
    "@types/clamp-js-main": "^0.11.2",
    "@types/headroom.js": "^0.12.0",
    "@types/lodash": "^4.17.15",
    "@types/lozad": "^1.16.1",
    "@types/micromodal": "^0.3.3",
    "@types/pikaday": "^1.7.5",
    "autoprefixer": "^10.4.20",
    "browser-sync": "^3.0.4",
    "bundlesize": "^0.18.2",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^7.0.5",
    "del": "^8.0.0",
    "dotenv": "^16.4.7",
    "gh-pages": "^6.0.0",
    "gulp": "^5.0.0",
    "gulp-data": "^1.3.1",
    "gulp-dom": "^1.0.0",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^9.1.0",
    "gulp-notify": "^5.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^10.0.0",
    "gulp-prettify": "^0.5.0",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.1.4",
    "gulp-sass": "^6.0.0",
    "gulp-size": "^5.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-svg-sprite": "^2.0.1",
    "gulp-svgo": "^2.2.1",
    "gulp-twig": "^1.2.0",
    "js-yaml": "^4.1.0",
    "postcss": "^8.5.2",
    "prettier": "^3.5.0",
    "prettier-plugin-twig-melody": "^0.4.6",
    "sass": "^1.86.3",
    "sort-css-media-queries": "^3.0.1",
    "stylelint": "^15.11.0",
    "stylelint-config-xo-scss": "~0.15.0",
    "stylelint-prettier": "~4.1.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.3",
    "webpack-bundle-analyzer": "^4.10.1",
    "webpack-stream": "^7.0.0",
    "yargs": "^17.6.2"
  },
  "dependencies": {
    "anchor-js": "^5.0.0",
    "animejs": "^4.0.2",
    "chart.js": "^4.4.7",
    "clamp-js-main": "^0.11.6",
    "focus-within-polyfill": "^5.2.1",
    "headroom.js": "^0.12.0",
    "iframe-resizer": "^4.4.5",
    "intersection-observer": "^0.12.0",
    "lodash": "^4.17.21",
    "lozad": "^1.16.0",
    "mdn-polyfills": "^5.20.0",
    "micromodal": "^0.6.1",
    "normalize.css": "^8.0.1",
    "object-fit-images": "^3.2.4",
    "panelsnap": "git+https://github.com/poojagunturu96/panelsnap",
    "pikaday": "^1.8.2",
    "preact": "^10.26.5",
    "promise-polyfill": "^8.3.0",
    "stickybits": "^3.7.9",
    "superclamp": "^0.2.3",
    "swiper": "^11.2.2"
  },
  "bundlesize": [
    {
      "path": "./dist/css/*.css",
      "maxSize": "35 kB",
      "compression": "brotli"
    },
    {
      "path": "./dist/js/main.bundle.js",
      "maxSize": "60 kB",
      "compression": "brotli"
    },
    {
      "path": "./dist/js/journey.bundle.js",
      "maxSize": "22 kB",
      "compression": "brotli"
    }
  ]
}
