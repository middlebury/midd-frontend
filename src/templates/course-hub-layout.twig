{% extends "layout.twig" %}

{% set coursehub_layout_full_width = coursehub_layout_full_width|default(false) %}

{% set page_header = {
  app_header: true,
  breadcrumb: page_header.breadcrumb|default(false),
  after_title: page_header.after_title,
  title: page_header.title
} %}

{% block layout_header %}
  {% include 'partials/app-header.twig' with {
    title: 'Course Hub',
    items: [
      {
        text:'My Terms',
        icon: 'chevron-down',
        active:true,
        items: [
          { text: 'Fall 2019' },
          { text: 'Fall 2019' },
          { text: 'Fall 2019' },
          { text: 'Fall 2019' },
        ]
      },
      {text:'Hub Help'},
      {text:'Browse Course Sites'},
      {text:'Course Catalog'},
    ]
  } %}
{% endblock %}

{% block layout_footer %}
  {% include 'partials/midd-footer.twig' %}
{% endblock %}

{% set _content = block('content') %}
{% set _nav = block('nav') %}

{% block page %}

  {% if not coursehub_layout_full_width %}
    {% embed 'partials/sidebar-layout.twig' %}
      {% block nav %}
        {{_nav|raw}}
      {% endblock %}
      {% block content %}
          {{_content|raw}}
      {% endblock %}
    {% endembed %}
  {% else %}
    {{_content|raw}}
  {% endif %}

{% endblock %}

