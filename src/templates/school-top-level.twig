{% extends "school-layout.twig" %}

{% set theme = 'sa' %}

{% set has_page_image = true %}

{% set page_header = {
  title: 'Argentina',
  breadcrumb: [
    { text: 'Middlebury C.V. Star Schools Abroad' },
    { text: 'Our Schools' },
  ],
  image_src: has_page_image,
  has_menu: true
} %}

{% block page %}

  <div class="container">
    <div class="row">

      <div class="col-md-10 offset-md-1">
        {# set overlap if page has featured image #}
        {% include 'partials/box-menu.twig' with {
          overlap: has_page_image,
          items: top_level_nav_example
        } %}
      </div>

      <div class="col-md-10 col-lg-8 offset-md-1 offset-lg-2">
        {% include 'partials/lead.twig' %}
      </div>

      {% include 'partials/top-level-paragraphs.twig' %}

    </div>

  </div>

{% endblock %}
