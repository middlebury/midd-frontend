{% extends 'school-home.twig' %}

{% set theme = 'institute' %}
{% set is_front = true %}

{% block layout_header %}
	{% embed 'partials/school-header.twig' %}
		{% block school_logo %}
			<img src="images/miis-logo.svg" srcset="images/miis-logo.svg 361w" sizes="(min-width: 1280px) 361px, 248px" alt="Logo for Middlebury Institute of International Studies at Monterey"/>
			<span class="sr-only">
				Middlebury Institute of International Studies at Monterey
			</span>
		{% endblock %}
	{% endembed %}
{% endblock %}

{% block content %}
	{% include 'paragraphs/mega-cta.twig' with {
    pin: 'left-bottom',
    miis: 'true',
    gradient: 'left-top',
    image: 'spotlight',
    caption: 'Lorem ipsum dolor sit amet consectetur adipisicing elit.',
    title_link: 'Water Sanitation Research and Development, India',
    text: 'Access to safe water and adequate sanitation services has proven to be one of the most efficient ways of improving human health.',
    link: 'Read more'
  } %}

  {% include 'paragraphs/dispatches.twig' with {
    section_label_text: 'Featured News',
    blurb: 'Lorem ipsum dolor sit, amet consectetur adipisicing elit. Necessitatibus
        quam optio ratione labore possimus iusto corrupti vero fugiat explicabo
        officiis ex, a sunt obcaecati molestias voluptate eum earum ipsam
        accusantium.',
  } %}

  {% include 'partials/section-header.twig' %}

  {% include 'paragraphs/video.twig' with {
    title_link: true
  }%}

  {% include 'paragraphs/media-group.twig' with {
    title_link: true,
    media_content_items : ['video', 'video']
  } %}

  {% include 'partials/section-header.twig' %}

  {% include 'paragraphs/themed-panel.twig' with {
    main_title: false,
    main_article: true,
    main_article_cta: true,
    main_article_title_link: false,
    subarticles: 3,
  }%}
  {% include 'partials/section-header.twig' %}

	{% include 'paragraphs/quad-story.twig' with {
    title_link: true
  } %}

  {% include 'partials/section-header.twig' %}

	{% include 'paragraphs/themed-panel.twig' with {
    main_title: false,
    main_article: true,
    main_article_cta: true,
    main_article_title_link: false,
    subarticles: 3,
  }%}
  
  {% include 'partials/section-header.twig' %}

  {% include 'paragraphs/quad-story.twig' %}
{% endblock %}

{% block layout_footer %}
	{% include 'partials/footer-cta-group.twig' %}
	{% include 'partials/school-footer.twig' with {
    name: 'Support the Institute',
    cta: {
      text: 'Make a Gift',
      link: 'https://engage.middlebury.edu/pages/give-to-miis?sid=1637&gid=3&pgid=496&cid=1248&_ga=2.201331473.105684710.1518198910-149004332.1477001419'
    },
    has_menus: true,
    menus: footer_nav
  } %}
	{% include 'partials/midd-footer.twig' %}
{% endblock %}
