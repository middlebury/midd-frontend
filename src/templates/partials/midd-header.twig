<header class="midd-header{% if midd_header_transparent %} midd-header--transparent{% endif %}">
  <div class="midd-header__container">
    <div class="midd-header__primary">
      <div class="midd-header__logo">
        <a href="">
          <img src="images/midd-shield.svg" alt="" class="midd-header__shield">
          <img src="images/midd-wordmark.svg" alt="" class="midd-header__wordmark">
        </a>
      </div>

      <a href="#menu" data-toggle-target=".js-midd-header-menu" class="midd-header__handle">
        <svg class="icon midd-header__icon midd-header__icon--bars">
          <use xlink:href="#icon-bars">
        </svg>
        <svg class="icon midd-header__icon midd-header__icon--times">
          <use xlink:href="#icon-times">
        </svg>
        <span>Menu</span>
      </a>
    </div>

    <div class="midd-header__secondary js-midd-header-menu">

      {% set nav_example = [
        {
          text: 'Our Schools',
          items: [
            'Middlebury College',
            'Language Schools',
            'Bread Loaf School of English',
            'Bread Loaf Writers\' Conference',
            'Institute of International Studies at Monterey',
            'C.V. Starr Schools Abroad',
            'School of the Environment'
          ]
        },
        {
          text: 'About Middlebury',
          items: ['A Sense of Purpose', 'The Exerpience of Place', 'Our Approach to Learning']
        },
        { text: 'Offices and Services' },
      ] %}

      <div class="midd-header__nav">
        <nav class="midd-nav">
          <ul class="midd-nav__list">
            {% for item in nav_example %}
              <li class="midd-nav__item midd-nav__item--top">
                <a href="" class="midd-nav__link midd-nav__link--top">
                  {{item.text}}
                </a>

                {% if item.items %}
                  <a href="#" role="button" class="midd-nav__handle" data-toggle-target=".js-middnav-list-{{loop.index}}">
                    <svg class="icon midd-nav__icon">
                      <use xlink:href="#icon-chevron-down">
                    </svg>
                  </a>
                  <ul class="midd-nav__list js-middnav-list-{{loop.index}}">
                    {% for subitem in item.items %}
                      <li class="midd-nav__item">
                        <a href="" class="midd-nav__link midd-nav__link--sub">{{subitem}}</a>
                      </li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </li>
            {% endfor %}
          </ul>
        </nav>
      </div>

      <div class="midd-header__search">
        <div class="midd-search">
          <a href="#search" class="midd-search__handle">
            <svg class="icon midd-search__icon"><use xlink:href="#icon-search"></svg> Search
          </a>

          <div class="midd-search__content">
            <form class="">
              <div class="midd-search__group">
                <label for="midd-midd-search" class="sr-only">Search</label>
                <input type="search" class="midd-search__input" placeholder="Search" name="query" required id="midd-midd-search">
                <button type="submit" class="midd-search__submit">
                  <svg class="icon">
                    <use xlink:href="#icon-search">
                  </svg>
                </button>
              </div>
            </form>
          </div>
        </div>

      </div>
    </div>
  </div>

  {% block midd_header_content %}{% endblock %}

</header>
