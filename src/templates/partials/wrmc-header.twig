<header class="wrmc-header js-headroom">

  <div class="px-3 px-md-5">

    <div class="wrmc-header__main">

      <div class="wrmc-header__logo">
        {% if is_front %}
          <h1 class="wrmc-header__title">
          {% endif %}
          <a class="wrmc-header__logo-graphic" href="">
            <img class="wrmc-header__logo-background" src="images/wrmc-triangle.svg"/>
            <img src="images/wrmc-ear.png" srcset="images/wrmc-ear@2x.png 2x"/>
            <div class="wrmc-header__logo-wordmark">
              <img src="images/wrmc-91.11-fm-wordmark.png" srcset="images/wrmc-91.11-fm-wordmark@2x.png 2x"/>
              <img src="images/wrmc-wordmark.png" srcset="images/wrmc-wordmark@2x.png 2x"/>
            </div>
            <span class="sr-only">WRMC 91.1FM Middlebury Radio Station</span>
          </a>
          {% if is_front %}
          </h1>
        {% endif %}
      </div>

      <div class="wrmc-header__content">

        <div class="wrmc-nav">
          {# Mobile burger menu icon #}
          <button class="wrmc-nav__handle" data-drawer="midd-nav-drawer" aria-label="Open navigation">
            {% include 'partials/icon.twig' with { name: 'bars', class: 'mr-1' } %}
            <span class="d-none d-sm-inline">Menu</span>
          </button>

          <div class="wrmc-nav__menu">

            <nav class="wrmc-nav__secondary-menu" aria-labelledby="midd-secondary-nav-label">
              <h2 class="sr-only" id="midd-secondary-nav-label">Secondary navigation</h2>
              <img src="images/wrmc-headphones.png" srcset="images/wrmc-headphones@2x.png 2x"/>
              <div class="wrmc-nav__secondary-menu--links">
                <a href="#" class="button button--light">listen now</a>
                <a href="#">Get the WRMC App</a>
              </div>
            </nav>

            <nav aria-label="Main navigation">
              <ul class="wrmc-nav__list">
                {% for item in wrmc_site_nav.items %}
                  <li class="wrmc-nav__item">

                    {% set active = loop.index == 3 %}

                    <a href="" class="wrmc-nav__link wrmc-nav__link--top{% if active %} wrmc-nav__link--active{% endif %}">{{item.text}}</a>

                  </li>
                {% endfor %}

                <li class="wrmc-nav__item d-none d-xl-block">
                  <a href="/search" class="school-search__handle" role="button" aria-label="Toggle site search" aria-expanded="false" aria-haspopup="true" data-toggle-target=".js-site-search" data-toggle-focus=".js-site-search-input" data-toggle-group="wrmc-header">

                    {% include 'partials/icon.twig' with {
                      name: 'search', class: 'mr-1 school-search__mag'
                    } %}
                    {% include 'partials/icon.twig' with {
                      name: 'times', class: 'mr-1 school-search__times'
                    } %}
                    Search
                  </a>
                </li>
              </ul>
            </nav>

          </div>

        </div>

        <div class="school-search">
          <a href="/search" class="school-search__handle d-xl-none" role="button" aria-label="Toggle site search" aria-expanded="false" aria-haspopup="true" {# data-toggle-target=".js-site-search" #} data-toggle-focus=".js-site-search-input" data-toggle-group="wrmc-header">
            {% include 'partials/icon.twig' with {
              name: 'search', class: 'mr-1 school-search__mag'
            } %}
            {% include 'partials/icon.twig' with {
              name: 'times', class: 'mr-1 school-search__times'
            } %}
            <span class="d-none d-sm-inline">Search</span>
          </a>

          <div class="school-search__content js-site-search">
            <form class="">
              <div class="input-group">
                <label for="midd-school-search" class="sr-only">Search</label>
                <input type="search" class="form-control js-site-search-input" id="midd-school-search" placeholder="Search">
                <button type="submit" class="button px-3 button--primary">
                  <span class="sr-only">Search</span>
                  {% include 'partials/icon.twig' with { name: 'search' } %}
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>

    </div>
  </div>
</header>
