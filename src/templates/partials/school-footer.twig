<footer class="school-footer">
  <div class="container">
    <div class="row">
      <div class="col-lg-4 school-footer__main">

        <div class="row">
          <div class="col-md-8 col-lg-12 mb-7">

            <p class="school-footer__name">{{name}}</p>
            <a href="{{cta.link}}" class="button button--light">{{cta.text}}</a>

          </div>
          <div class="col-md-4 col-lg-12 mb-7">

            <div class="text-white f2 mb-3">
              <p class="mb-1 f2">{{addr}}</p>
              <a href="mailto:" class="text-white link-underline">{{email}}</a><br>
              <a href="tel:" class="text-white link-underline">{{tel}}</a>
            </div>

            {% include 'partials/social-links.twig' with {
              light: true,
              large: true
            } %}

          </div>

        </div>
      </div>
      <div class="col-lg-8">
        <div class="row">
          {% for menu in menus %}
            {% include 'partials/footer-menu.twig' with menu %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</footer>
