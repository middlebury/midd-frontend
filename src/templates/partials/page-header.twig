<div class="container px-0">

  <header class="page-header{% if image_src %} page-header--has-image{% endif %}{% if has_menu %} page-header--has-menu{% endif %}{% if app_header %} page-header--app{% endif %}{% if theme == 'wrmc' %} page-header--wrmc{% endif %}">

    {% if image_src %}
      <figure class="page-header__figure">
        <img srcset="https://www.middlebury.edu/institute/sites/default/files/styles/400x225/public/2020-07/preview-days-jul-2020-hp.jpg?fv=PrEVE5ey&amp;itok=7C1vVYB2 400w, https://www.middlebury.edu/institute/sites/default/files/styles/640x360/public/2020-07/preview-days-jul-2020-hp.jpg?fv=GWIgct3s&amp;itok=3Ttn0MnX 640w, https://www.middlebury.edu/institute/sites/default/files/styles/960x540/public/2020-07/preview-days-jul-2020-hp.jpg?fv=VhICv304&amp;itok=erqWEcEq 960w, https://www.middlebury.edu/institute/sites/default/files/styles/1280x720/public/2020-07/preview-days-jul-2020-hp.jpg?fv=NwTyzS9f&amp;itok=ALVH1Mke 1280w, https://www.middlebury.edu/institute/sites/default/files/styles/1440x810/public/2020-07/preview-days-jul-2020-hp.jpg?fv=VfRAcaYE&amp;itok=elWxxmgF 1440w" sizes="(max-width: 1440px) 100vw, 1440px" src="https://www.middlebury.edu/institute/sites/default/files/styles/1440x810/public/2020-07/preview-days-jul-2020-hp.jpg?fv=VfRAcaYE&amp;itok=elWxxmgF" alt="Flags of several countries on either side of the corner of a building on campus">
        {# {% include 'partials/img.twig' with { name: 'pardot_landing_page' } %} #}

        {# <figcaption class="page-header__caption">
          {% include 'partials/tooltip.twig' with {
            light: true,
            size: 'lg',
            id: random(1234),
            label: 'some caption for top level image'
          } %}
        </figcaption> #}
      </figure>
    {% endif %}

    {% if weekly_top_ten %}
      <button class="page-header__list-toggle" aria-describedby="wrmc-tooltip-label-{{random(1234)}}">
        Weekly Top Ten
        <span class="page-header__list-ellipsis">
          <span></span><span></span><span></span>
        </span>
      </button>
      <div class="page-header__list" role="tooltip" id="wrmc-tooltip-label-{{random(1234)}}">
        <ol class="page-header__list-overlay">
          {% for item in playlist_items %}
            <li>
              <p>{{item.artist}}</p>
              <p><em>{{item.song}}</em></p>
            </li>
          {% endfor %}
        </ol>
      </div>
    {% endif %}

    <div class="page-header__main">
      <div class="page-header__content">

        {% if breadcrumb != false %}
          {% include 'partials/breadcrumb.twig' with {
            items: breadcrumb,
            light: image_src  }
          %}
        {% endif %}
        
        {% if title %}
          <h1 class="page-header__title" id="midd-page-header-label">{{title}}</h1>
        {% endif %}
        {{pronouns}}

        {{after_title}}

        {% if menu_items is not empty %}
          {% include 'partials/box-menu.twig' with { items: menu_items, class: 'mb-0' } %}
        {% endif %}

      </div>
    </div>
  </header>

</div>
