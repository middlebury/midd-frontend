{% set id = random(1234) %}
<!-- video iframe html should be escaped -->
<figure class="video js-video" style="{{ no_margin ? "margin:-1rem -1rem 0 -1rem" : "" }}" data-video='<iframe src="https://player.vimeo.com/video/221201240?autoplay=1" width="400" height="225" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen allow="autoplay"></iframe>'>
    <div class="video__content js-video-content">
      <a
        href="https://player.vimeo.com/video/221201240"
        class="js-video-link video__link"
        role="button"
        aria-label="Play video"
        aria-describedby="midd-video-label-{{label_id ? label_id : id}}"
      >
        {% include 'partials/img.twig' with { name: 'video' } %}
        <span class="button button--primary video__button">
          Play
          <span class="ml-3">
            {% include 'partials/icon.twig' with {
              name: 'play'
            } %}
          </span>
        </span>
      </a>
    </div>
  {% if transcript %}  
    <figcaption class="video__body">
      <h3 class="video__title" id="midd-video-label-{{id}}">Practical Skills for Positive Change</h3>
      <p class="video__text">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque viverra aliquet lacus a tristique. <a href="">Suspendisse commodo</a> pulvinar nisi vel laoreet. Pellentesque id hendrerit velit, vitae consectetur libero.</p>
      {% include 'partials/transcript.twig' with { id: id } %}
    </figcaption>
  {% endif %}
</figure>
