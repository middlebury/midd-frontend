{% embed 'partials/sidebar-layout.twig' %}
  {% block nav %}

    {% include 'partials/page-nav.twig' with {
      items: [
        { text: 'Curriculum', href: '#' },
        { text: 'Financing Your Education', href: '#' },
      ]
    } %}

    {% embed 'partials/filter.twig' with { label: 'Filter by Category' } %}
      {% block content %}
        <ul>
          {% for i in 1..3 %}
            <li class="mb-2"><a href="">Category {{i}}</a></li>
          {% endfor %}
          <li class="mb-2"><a href="" class="link-active">Active Category</a></li>
          {# no margin util on last item #}
          <li class=""><a href="">Category</a></li>
        </ul>
      {% endblock %}
    {% endembed %}

  {% endblock %}
  {% block content %}

    {% include 'partials/active-filter.twig' with {
      label: 'Category 1 '
    } %}

    <ul class="list list--dividers mb-7">

      <li class="list__item">
        {% include 'partials/story.twig' with {
          id: 1,
          featured: true
        } %}
      </li>

      {% for i in 0..3 %}
        <li class="list__item">
          {% include 'partials/story.twig' with {
            id: i + 1
          } %}
        </li>
      {% endfor %}

    </ul>

    {% include 'partials/pagination.twig' %}

  {% endblock %}
{% endembed %}

