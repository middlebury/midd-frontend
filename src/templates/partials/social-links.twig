{% set names = ['linkedin', 'instagram', 'youtube', 'facebook'] %}

<ul class="d-inline-flex {{class}}">
  {% for name in names %}
    {# {% if env.test or random(1) and not items %} #}
      <li class="mr-1">
        <a href="#" class="d-inline-block {% if light %}text-white hover-fadeout{% else %}hover-fadein{% endif %} {{office_footer ? " px-1" : " p-1"}}">
          {% include 'partials/icon.twig' with {
            name: name,
            class: large ? 'f5' : null
          } %}
          <span class="sr-only">Link to page/content on {{name}}</span>
        </a>
      </li>
    {# {% endif %} #}
  {% endfor %}
</ul>
