<div class="drawer drawer--midd-hub" id="midd-nav-drawer" aria-hidden="true">
  <div class="drawer__overlay" tabindex="-1" data-drawer-close>
    <div class="drawer__header">
      <h2 class="sr-only" id="midd-modal-1-title">{{title}}</h2>
      <img src="images/middlebury-logo-white.svg"
        alt="Middlebury Logo"
        width="110"
        height="40" />
      <button class="drawer__close" aria-label="Close modal" data-drawer-close>
        {% include 'partials/icon.twig' with { name: 'times', class: 'mr-1' } %}
        Close
      </button> 
    </div>
    <nav class="drawer-nav" aria-labelledby="midd-drawer-nav-label">
      <h2 class="sr-only" id="midd-drawer-nav-label">Navigation</h2>

      <ul class="drawer-nav__list drawer-nav__list--top">
        {% for item in site_nav.items %}
          <li class="drawer-nav__item">

            <a href="" class="drawer-nav__link drawer-nav__link--top">{{item.text}}</a>

            {% if item.items %}
              <button
                class="drawer-nav__handle"
                data-toggle-target=".js-subnav-{{loop.index}}"
                aria-haspopup="true"
                aria-expanded="false"
                aria-controls="midd-subnav-{{loop.index}}"
              >
                {% include 'partials/icon.twig' with { name: 'chevron-down', class: 'drawer-nav__chevron' } %}
              </button>

              <ul class="drawer-nav__list drawer-nav__list--sub js-subnav-{{loop.index}}" id="midd-subnav-{{loop.index}}">
                {% for subitem in item.items %}
                  <li class="drawer-nav__item drawer-nav__item--sub">
                    <a href="" class="drawer-nav__link drawer-nav__link--sub">{{subitem.text}}</a>
                  </li>
                {% endfor %}
              </ul>
            {% endif %}

          </li>
        {% endfor %}

      </ul>

    </nav>

  </div>
</div>

