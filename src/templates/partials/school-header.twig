<header class="school-header js-headroom">
  <div class="school-header__primary">
    <a href="">
      <img src="images/midd-logo.svg" alt="" width="186" height="76" class="school-header__logo">
    </a>
    <a href="#menu" data-toggle-target=".js-menu-1" class="menu-handle">
      <svg class="icon bars">
        <use xlink:href="#icon-bars">
      </svg>
      <svg class="icon times">
        <use xlink:href="#icon-times">
      </svg>

      <span class="menu-handle__text">Menu</span>
    </a>
  </div>

  <div class="school-header__secondary js-menu-1">
    <div class="school-header__navs">
      <nav class="site-nav">
        <ul class="site-nav__list">
          {% for item in site_nav.items %}
            <li class="site-nav__item">

              {% if item.items %}

                <div class="site-nav__actions">
                  <a href="" class="site-nav__link">{{item.text}}</a>
                  <a href="#" data-toggle-target=".js-subnav-{{loop.index}}" role="button" class="site-nav__subnav-handle">
                    <svg id="icon-arrow-down" class="icon" viewBox="0 0 20 12" width="100%" height="100%">
                      <path d="M10 8L2 0 0 2l10 10L20 2l-2-2z" fill-rule="evenodd"></path>
                    </svg>
                  </a>
                </div>

                <nav class="site-subnav js-subnav-{{loop.index}}">
                  <ul class="site-nav__list">
                    {% for subitem in item.items %}
                      <li class="site-nav__item"><a href="" class="site-nav__link">{{subitem.text}}</a></li>
                    {% endfor %}
                  </ul>
                </nav>
              {% else %}
                <a href="" class="site-nav__link">{{item.text}}</a>
              {% endif %}

            </li>
          {% endfor %}
        </ul>
      </nav>
      <span class="school-header__divider"></span>
      <nav class="site-nav">
        <ul class="site-nav__list site-nav--util">
          {% for item in site_nav.utils %}
            <li class="site-nav__item">
              <a href="" class="site-nav__link">{{item.text}}</a>
            </li>
          {% endfor %}
        </ul>
      </nav>
    </nav>
  </div>
  <div class="school-header__search">

    <div class="school-search">
      <a href="#search" class="school-search__button">
        <svg class="icon"><use xlink:href="#icon-search"></svg> Search
      </a>

      <div class="school-search__content">
        <form class="">
          <div class="school-search__group">
            <input type="search" class="school-search__input" placeholder="Search">
            <button type="submit" class="school-search__submit">
              <svg class="icon">
                <use xlink:href="#icon-search">
              </svg>
            </button>
          </div>
        </form>
      </div>
    </div>

  </div>

</header>
