<div class="midd-footer">
  <div class="container">
    <div class="row">
      <div class="col-lg-3">

        <div class="mb-4 mb-lg-0">
          <a href="https://www.middlebury.edu">
            <img src="images/middlebury-logo-white.svg" alt="Middlebury" width="195" height="71">
          </a>
        </div>

      </div>
      <div class="col-lg-9">

        {% if secondary_footer_nav is not empty %}
          <ul class="midd-footer__list">
            {% for item in secondary_footer_nav %}
              <li class="midd-footer__item">
                <a href="{{item.href}}" class="midd-footer__link">{{item.text}}</a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}

      </div>
    </div>
  </div>

