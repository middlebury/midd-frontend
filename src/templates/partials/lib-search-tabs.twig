    {% embed 'partials/tab.twig' with { id: 'midd-lib-summon' } %}
      {% block tabcontent %}

        <form action="http://middlebury.summon.serialssolutions.com/search" method="GET">
          <input name="spellcheck" type="hidden" value="true">
          <div class="form-group">
            <label for="lib-summon-search">Search Everything</label>
            <div class="input-group">
              <input class="form-control" id="lib-summon-search" size="40" name="s.q" type="text" placeholder="Enter a keyword...">
              <button type="submit" class="button button--primary" aria-label="Search">
                <svg class="icon">
                  <use xlink:href="#icon-search">
                </svg>
              </button>
