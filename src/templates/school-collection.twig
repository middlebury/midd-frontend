{% extends 'school-layout.twig' %}

{% set page_header = {
  title: 'Collection',
  breadcrumb: [
    {
      text: 'Collection Name'
    }
  ]
} %}

{% block page %}
  {% embed 'partials/sidebar-layout.twig'
    with {
      toc: false
    }
  %}
    {% block nav %}
      {% include 'partials/page-nav.twig' with {
        label: 'Argentina',
        items: [
          {
            text: 'Curriculum',
            href: '#'
          },
          {
            text: 'Faculty',
            href: '#'
          },
          {
            text: 'Financing Your Education',
            href: '#'
          }
        ]
      } %}

      <div class="filters">
        <div class="filters__header">
          <h2 class="filters__title">
            Filters
          </h2>
          <a href="" class="filters__clear button button--sm">
            {% include 'partials/icon.twig' with {
              name: 'times',
              class: 'mr-1'
            } %}Clear
          </a>
        </div>
        {% include 'partials/filter.twig' with {
          title: 'Medium',
          items: [
            {
              text: 'Photograph'
            },
            {
              text: 'Short Story'
            },
            {
              text: 'Poem'
            },
            {
              text: 'Audio'
            },
            {
              text: 'Video'
            }
          ]
        } %}
        {% include 'partials/filter.twig' with {
          title: 'Decades',
          items: [
            {
              text: '1980-90'
            },
            {
              text: '1970-80'
            },
            {
              text: '1960-70'
            },
            {
              text: '1940-50'
            }
          ]
        } %}
      </div>
    {% endblock %}
    {% block content %}
      <div class="mb-5 d-flex border-t border-4 border-navy py-2">
        <button class="button button--sm">
          {% include 'partials/icon.twig' with {
            name: 'times'
          } %}Photograph
        </button>
        <button class="button button--sm">
          {% include 'partials/icon.twig' with {
            name: 'times'
          } %}1980
        </button>
        <button class="button button--sm" class="ml-auto">
          {% include 'partials/icon.twig' with {
            name: 'times'
          } %}Clear Filters
        </button>
      </div>

      <div class="mb-8">
        {% include 'partials/collection-card.twig' with {
          featured: true
        } %}
      </div>

      <ul class="masonry">
        {% for item in 0..7 %}
          <li class="masonry__item">
            {% include 'partials/collection-card.twig' with {} %}
          </li>
        {% endfor %}
      </ul>

      {% include 'partials/pagination.twig' %}
    {% endblock %}
  {% endembed %}
{% endblock %}
