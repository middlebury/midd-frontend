{% set id = random(1234) %}
<div class="paragraph paragraph--full">
	<div
		class="container px-0">

		{# alignment should be one of left-bottom, left-top, right-bottom, right-top, center #}

		<section class="mega-cta {% if gradient %} mega-cta--gradient-{{gradient}} {% endif %} mega-cta--image-{{pin ? pin : 'bottom-left'}} {% if hero %} mega-cta--hero{% endif %}{% if blse %} mega-cta--blse{% endif %}" aria-labelledby="midd-mega-cta-label-{{id}}">
			<figure class="mega-cta__back">
				{% include 'partials/img.twig' with {
          name: 'spotlight'
        } %}
				{% if caption %}
					<figcaption class="mega-cta__caption">
						{% include 'partials/tooltip.twig' with {
              light: true,
              size: 'lg',
              id: random(1234),
              label: caption
            } %}
					</figcaption>
				{% endif %}
			</figure>

			<div class="mega-cta__front">
				<div class="mega-cta__content {% if gradient %} mega-cta__content-position mega-cta__content-position-{{gradient}} {% endif %}">
					{% if title %}
						<h2 class="mega-cta__title" id="midd-mega-cta-label-{{id}}">{{title|default('What makes Middlebury different?')}}</h2>
					{% endif %}
					{% if title_link %}
						<a href="#" class="mega-cta__link">
							<h2 class="mega-cta__title{{miis ? '-miis' : ''}}" id="midd-mega-cta-label-{{id}}">{{title_link}}</h2>
						</a>
					{% endif %}
					{% if text %}
						<p class="mega-cta__text{{miis ? '-miis' : ''}}">
							{{text}}
							{# With our support, you’ll experience total immersion in the language and culture of your country. You’ll have an authentic learning experience at a local academic institution. And you’ll have the guided independence to engage with your community, take on an internship, and make personal discoveries you’ll always remember. #}
						</p>
					{% endif %}
					<a class="button button--outline button--light" href="">{{link|default('Apply now')}}</a>
				</div>
			</div>
		</section>

	</div>
</div>
