{% set id = random(1234) %}

<div class="paragraph paragraph--full">
	<div
		class="container px-0">

		{# gradient should be one of left-bottom, left-top, right-bottom, right-top, center #}

		<section 
      class="mega-cta {{miis ? 'mega-cta--miis' : ''}} mega-cta--image{{pin ? '-' ~ pin : '-bottom-left'}} {% if hero %} mega-cta--hero{% endif %}{% if blse %} mega-cta--blse{% endif %}{% if admissions_lp %} mega-cta--lp {{banner_cta ? 'mega-cta--banner-cta' : '' }}{% endif %}" aria-labelledby="midd-mega-cta-label-{{id}}"
      {% if admissions_lp %}
        data-border="dual-border"
        data-color-primary="#75a3cd"
        data-color-secondary="#fff791"
      {% endif %}
    >
      {% if gradient %}
			  <div class="mega-cta__back-gradient">
      {% endif %}
				<figure class="mega-cta__back">
          {% include 'partials/img.twig' with {
            name: image ?? 'spotlight'
          } %}
					{% if caption %}
						<figcaption class="mega-cta__caption">
							{% include 'partials/tooltip.twig' with {
								light: true,
								size: 'lg',
								id: random(1234),
								label: caption
							} %}
						</figcaption>
					{% endif %}
				</figure>
      {% if gradient %}
			  </div>
      {% endif %}

			<div class="mega-cta__front {% if gradient %} mega-cta--gradient-{{gradient}} {% endif %}">
				<div class="{% if gradient %} mega-cta__content mega-cta__content-position mega-cta__content-position-{{gradient}} {% else %} mega-cta__content {% endif %}">
					{% if title %}
            {% if admissions_lp %}
              <h1 
                class="mega-cta__title title-sans-serif border-dual-shadow__text" 
                id="midd-mega-cta-label-{{id}}"
                data-text-color="#75a3cd"
                data-border="text-shadow"
                data-color-primary="#ed01a7"
                data-color-secondary="#f99f33"
              >
                {{title}}
              </h1>
            {% else %}
						  <h2 class="mega-cta__title" id="midd-mega-cta-label-{{id}}">{{title|default('What makes Middlebury different?')}}</h2>
            {% endif %}
					{% endif %}
					{% if title_link %}
						<a href="#" class="mega-cta__link">
							<h2 class="mega-cta__title{{miis ? '-miis' : ''}}" id="midd-mega-cta-label-{{id}}">{{title_link}}</h2>
						</a>
					{% endif %}
					{% if text %}
						<p class="mega-cta__text{{miis ? '-miis' : ''}}">
							{{text}}
						</p>
					{% endif %}
          {% if admissions_lp %}
            <a class="button button--primary button--heavy" href="">{{link}}</a>
          {% else %}
					  <a class="button button--outline button--light" href="">{{link|default('Apply now')}}</a>
          {% endif %}
				</div>
			</div>
		</section>

	</div>
</div>
