<div class="paragraph--link-list" data-digest-content>
  {% embed 'partials/section.twig'
    with {
      title: title,
      moreLinkText: moreLinkText,
      moreLinkHref: moreLinkHref,
      text: text,
      labelledby: 'midd-related-link-list'
    }
  %}
    {% block content %}
      <ul class="link-list__list">
        {% for item in items %}
          <li class="link-list__item">
            <div class="link-list__box">
              {% if item.image %}
                <div class="media-object__image">
                  <a href="">
                    {% include 'partials/img.twig' with {
                      name: 'profile_spotlight_item'
                    } %}
                  </a>
                </div>
              {% endif %}
              <a href="" class="link-list__link">{{ item.title }}</a>
              {% if item.text %}
                <p class="link-list__info">
                  {{ item.text }}
                </p>
              {% endif %}
            </div>
          </li>
        {% endfor %}
      </ul>
    {% endblock %}
  {% endembed %}
</div>
