<div class="section paragraph paragraph--expand" data-digest-content>
  <div class="paragraphs--wide__offset">
    <div class="section__header">
      <h2 class="section__title">
        {{title}}
      </h2>
      <p class="section__text">
        {{blurb}}
      </p>
    </div>
  </div>

  <div class="row">
    {% for item in 1..items %}
      <div class="col-md-6 mb-7">
        {% if media_content_type == 'video' %}
          {% include 'partials/video.twig' with {
            id: loop.index
          } %}
        {% elseif media_content_type == 'audio' %}
          {% include 'paragraphs/audio.twig' %}
        {% elseif media_content_type == 'image' %}
          {% include 'partials/image-with-caption.twig' with {
            name: 'schedule'
          } %}
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>
