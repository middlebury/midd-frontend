<figure class="my-7 video js-video" data-video='<iframe src="https://player.vimeo.com/video/221201240" width="400" height="225" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>'>
  <div class="video__content js-video-content">
    <a href="https://player.vimeo.com/video/221201240" class="js-video-link">
      {% include 'partials/img.twig' with { name: 'video' } %}
      <span class="button button--primary video__button">
        Play
        <span class="ml-3">
          <svg class="icon icon--sm">
            <use xlink:href="#icon-play" />
          </svg>
        </span>
      </span>
    </a>
  </div>
  <figcaption class="video__body">
    <h3 class="video__title">Practical Skills for Positive Change</h3>
