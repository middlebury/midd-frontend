{% set id = random(1000) %}

<div class="paragraph flowchart bg-blue-lighter" id="{{ id }}" data-flowchart>
  {#                        <h2 class="h2 mb-5">
    Flowchart
  </h2> #}

  {% for item in flowchart_data %}
    <div id="flowchart-{{ id }}-{{ item.id }}"
      class="border-b p-5 pl-7"
      data-flowchart-item>
      {% if item.title is not empty %}
        <h3 class="h3 mb-2 flowchart__title">
          {{ item.title }}
        </h3>
      {% endif %}

      {% if item.text %}
        <div class="typography">
          {{ item.text }}
        </div>
      {% endif %}

      {% if item.choices is not empty %}
        <div class="mt-4 radios">
          {% for choice in item.choices %}
            <div class="radios__item">
              <a href="#flowchart-{{ id }}-{{ choice.to }}"
                class="radios__label"
                data-flowchart-btn>
                {{ choice.text }}
              </a>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  {% endfor %}
</div>
