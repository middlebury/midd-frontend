{% extends "school-home.twig" %}

{% set theme = 'college' %}

{% set has_page_image = true %}

{% block layout_header %}
  {% embed 'partials/school-header.twig' with {
    extended: true
  } %}
    {% block school_logo %}
      <img src="images/college-logo.svg" srcset="images/college-logo.svg 180w" sizes="(min-width: 1280px) 180px, 120px" alt="Logo for Middlebury College"/>
      <span class="sr-only">Middlebury College</span>
    {% endblock %}
  {% endembed %}
{% endblock %}

{% block content %}

  {% include 'paragraphs/admissions-mega-cta.twig' with {
    title: 'YOU. VERMONT. THE WORLD.',
    text_color: '#75a3cd',
    text_shadow_color_primary: '#ed01a7',
    text_shadow_color_secondary: '#f99f33',
  } %}
  <div class="paragraph--expand paragraph--pull-up">
    {% include 'partials/box-menu.twig' with {
      overlap: has_page_image,
      items: top_level_nav_example
    } %}
  </div>
{% endblock %}
