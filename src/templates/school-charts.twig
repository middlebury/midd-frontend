{% extends "school-layout.twig" %}

{% set page_header = {
  title: 'Charts on a page',
  breadcrumb: [
    { text: 'Offices and Services' },
    { text: 'Student Financial Services' },
  ]
} %}

{% block page %}
  {% embed 'partials/sidebar-layout.twig' %}
    {% block nav %}

      {% include 'partials/page-nav.twig' with {
        label: 'Student Financial Services',
        items: [
          { text: 'Curriculum', href: '#' },
          {
            text: 'Faculty',
            href: '#',
            items: [
              { text: 'Faculty sub page 1', href: '#' },
              { text: 'Faculty sub page 2', href: '#' },
              {
                text: 'Faculty sub page 3',
                href: '#',
                active: true
              },
              { text: 'Faculty sub page 4', href: '#' },
            ]
          },
          { text: 'Financing Your Education', href: '#' },
        ]
      } %}

    {% endblock %}
    {% block toc %}

      <div data-digest-nav data-sticky data-sticky-offset=".js-headroom"></div>

    {% endblock %}
    {% block content %}

      {% include 'partials/basic-content.twig' %}

      <div class="paragraphs">


        {% include 'paragraphs/chart-group.twig' with {
          title: 'Grouped Bar chart',
          text: 'This bar chart has a suggested maximum value which shows up on the y axis, and a value suffix so it can be presented as a percentage.',
          items: [
            {
              type: 'bar',
              max: 100,
              suffix: '%',
              labels: ['label 1', 'label 2', 'label 3'],
              datasets: [
                { label: 'data 1', data: [10,40,70] },
                { label: 'data 1', data: [15,47,60] },
                { label: 'data 1', data: [24,42,96] }
              ]
            }
          ]
        } %}



        {% include 'paragraphs/chart-group.twig' with {
          title: 'Horizontal Bar chart',
          text: true,
          items: [
            {
              type: 'doughnut',
              title: 'chart 1',
              suffix: '%',
              labels: ["Administration","Advising/Counseling","Analyst/Research","Communications/Marketing/PR","Management/Strategic Planning","Operations/Project Management","Sales/Account Management","Teaching/Training","Translation/Interpretation","Other"],
              datasets: [
                { label: 'Percentage of employment', data: [41,14,4,10,4,18,2,4,1,2] }
              ]
            }
          ]
        } %}

        {% include 'paragraphs/chart-group.twig' with {
          title: 'Some pie chart',
          text: true,
          items: [
            {
              type: 'pie',
              title: 'chart 1',
              labels: ['label 1', 'label 2', 'label 3'],
              datasets: [ { label: 'data 1', data: [1,2,3] } ]
            },
            {
              type: 'doughnut',
              title: 'chart 1',
              labels: ['label 1', 'label 2', 'label 3'],
              datasets: [ { label: 'data 1', data: [1,2,3] } ]
            }
          ]
        } %}


        {% include 'paragraphs/chart-group.twig' with {
          title: 'Chart group',
          text: true,
          items: [
            {
              type: 'pie',
              title: 'chart 1',
              labels: ['label 1', 'label 2', 'label 3'],
              datasets: [ { label: 'data 1', data: [1,2,3] } ]
            },
            {
              type: 'doughnut',
              title: 'chart 2',
              labels: ['label 1', 'label 2', 'label 3'],
              datasets: [ { label: 'data 1', data: [3,10,20] } ]
            },
            {
              type: 'doughnut',
              title: 'chart 3',
              labels: ['label 1', 'label 2', 'label 3'],
              datasets: [ { label: 'data 1', data: [13,2,12] } ]
            }
          ]
        } %}

        {% include 'paragraphs/chart-group.twig' with {
          title: 'Things are going well',
          items: [
            {
              type: 'line',
              title: 'chart 1',
              labels: ['2019', '2020', '2021', '2022'],
              datasets: [ { label: 'data 1', data: [3,6,13,30] } ]
            },
            {
              type: 'line',
              title: 'chart 2',
              labels: ['2019', '2020', '2021', '2022'],
              datasets: [ { label: 'data 1', data: [6,17,29,50] } ]
            },
          ]
        } %}


        {% include 'paragraphs/chart-group.twig' with {
          title: 'Things are a little confusing',
          items: [
            {
              type: 'line',
              title: 'chart 1',
              labels: ['2019', '2020', '2021', '2022'],
              datasets: [
                { label: 'data 1', data: [3,-6,13,-30] },
                { label: 'data 2', data: [70,25,-4,44] },
                { label: 'data 3', data: [13,-15,-9,52] },
              ]
            },
            {
              type: 'line',
              title: 'chart 2',
              labels: ['2019', '2020', '2021', '2022'],
              datasets: [
                { label: 'data 1', data: [19,17,29,-50] },
                { label: 'data 2', data: [25,-11,34,56] },
                { label: 'data 3', data: [101,-17,37,-28] }
              ]
            },
          ]
        } %}

      </div>

    {% endblock %}
  {% endembed %}
{% endblock %}


{% block scripts %}
  <script src="/js/Chart.min.js" async></script>
  <script src="/js/chartjs-plugin-deferred.min.js" async></script>
{% endblock %}

